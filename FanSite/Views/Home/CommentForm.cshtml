@*@model Comment*@
@model String
@{
    Layout = "_general";
    ViewBag.Title = "Leave a comment";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="mainDiv">
        <h1>Comment on @ViewBag.NameOfStory</h1>
        <ul>
            <li><h1><a href="/">Home</a></h1></li>
            <li><h1><a href="/Sources/Index">Sources</a></h1></li>
            @*<li><h1><a href="/Sources/PhysicalMedia">Books and print media</a></h1></li>
            <li><h1><a href="/Sources/OnlineMedia">Links to online media</a></h1></li>*@
        </ul>
        <form asp-action="CommentForm" method="post">
            <label name="@Model" hidden>Story title:</label>
            <input name="storyTitle" hidden value="@Model" />
            <div>
                <label name="username">Username:</label>
                <input name="username" />
            </div>
            <div>
                <label name="email">Your email:</label>
                <input name="email" />
            </div>
            <div>
                <label name="CommentText">Comment:</label>
                <input name="CommentText" />
            </div>
            <div>
                <button type="submit">Submit Comment</button>
            </div>
        </form>
        <div>
            Click to return to <a asp-action="Stories">stories</a>
        </div>
    </div>
</body>
</html>
